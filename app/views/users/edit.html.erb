<% provide(:title, "Editar participante") %>
<h1>Edita al participante</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :depto %>
      <%= f.text_field :depto, class: 'form-control' %>

      <%= f.label :condo %>
      <%= f.text_field :condo, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "ConfirmaciÃ³n" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Guardar cambios", class: "btn btn-primary" %>
    <% end %>

  </div>

</div>
